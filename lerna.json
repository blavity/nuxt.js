{
  "version": "2.8.blv.alpha",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "conventionalCommits": true,
  "exact": true,
  "packages": [
    "packages/*",
    "distributions/*"
  ],
  "command": {
    "publish": {
      "npmClient": "npm"
    },
    "init": {
      "exact": true
    }
  },
  "changelog": {
    "labels": {
      "feat": "New Feature",
      "fix": "Bug Fix",
      "docs": "Documentation",
      "perf": "Performance",
      "refactor": "Code Refactoring"
    }
  }
}
